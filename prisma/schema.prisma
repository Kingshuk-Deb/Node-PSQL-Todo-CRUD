generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  dueDate     String
  createdAt   DateTime @default(now())
  User        User    @relation(fields: [userId], references: [id])
  userId      Int
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  todos    Todo[]
}
